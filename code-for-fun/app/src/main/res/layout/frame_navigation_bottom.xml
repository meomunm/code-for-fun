<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:background="@color/colorBackgroundListTodo">


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="53dp"
                android:layout_height="53dp"
                app:fabSize="normal"
                android:src="@mipmap/ic_add"
                app:layout_anchor="@id/ll_bottom_view"
                android:layout_centerHorizontal="true"/>


        <RelativeLayout
            android:id="@+id/ll_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorWhite">
        
            <TextView
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:drawableTop="@mipmap/ic_home"
                android:text="Home"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/rubik_medium"
                android:layout_marginStart="55dp"
                android:layout_marginEnd="55dp"
                android:textColor="@color/tv_bottom_selected"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <View
                android:layout_marginBottom="13dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:background="@color/colorGreenLight"
                android:layout_width="133dp"
                android:layout_height="@dimen/dimension_4dp"/>

            <TextView
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:drawableTop="@mipmap/ic_grid"
                android:text="Task"
                android:fontFamily="@font/rubik_medium"
                android:layout_marginStart="55dp"
                android:layout_marginEnd="55dp"
                android:textColor="@color/tv_bottom_not_selected"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>