<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="#47F456C3" />
            <size
                android:width="52dp"
                android:height="52dp" />
            <gradient
                android:angle="45"
                android:centerColor="#ED38B1"
                android:endColor="#E0139C"
                android:startColor="#F857C3" />
        </shape>
    </item>

    <item>
        <shape android:shape="line">
            <size android:height="28dp" android:width="5dp"/>
            <stroke
                android:width="5dp"
                android:color="@android:color/white" />
        </shape>
    </item>
    <item>
        <rotate
            android:fromDegrees="90"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="-90">
            <shape android:shape="line">
                <stroke
                    android:width="5dp"
                    android:color="@android:color/white" />
            </shape>
        </rotate>
    </item>
</layer-list>