<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <corners android:radius="1dp" />
                    <gradient android:angle="270" android:centerColor="@color/colorGreenLight" android:endColor="@color/colorGreenLight" android:startColor="@color/colorGreenLight" />
                    <size android:width="@dimen/dimension_18dp" android:height="@dimen/dimension_18dp" />
                </shape>
            </item>
            <item
                android:width="5dp"
                android:height="2dp"
                android:left="4dp"
                android:top="10dp">
                <rotate android:fromDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/colorWhite" />
                    </shape>
                </rotate>
            </item>
            <item
                android:width="8dp"
                android:height="2dp"
                android:left="6dp"
                android:top="9dp">
                <rotate android:fromDegrees="-45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/colorWhite" />
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>
</selector>